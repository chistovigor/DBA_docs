---
systemLog: 
 destination: file
 logAppend: true
 logRotate: reopen 
 path: /var/log/mongodb/mongod.log

# Where and how to store data.
storage:
 dbPath: {{ mongodb_data_dest }} 
# journal: #not relevant since mongoV7
#   enabled: true #not relevant since mongoV7  

processManagement:
 fork: true  # fork and run in background
 pidFilePath: /var/run/mongodb/mongod.pid  # location of pidfile 

# network interfaces
net:
 port: 27017
 bindIp: 127.0.0.1,{{ ip }}

replication:
 replSetName: {{ rsname }}
 oplogSizeMB: {{ oplog }}

#security:
#  authorization: enabled 
#  keyFile: /etc/mongod.key 

operationProfiling:
 slowOpThresholdMs: 1

